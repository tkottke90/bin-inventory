  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/api",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "PORT": "6190",
        "TOKEN_LIFESPAN": "1800"
      },
      "runtimeArgs": [
        "run-script",
        "start:dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    }
  ]
}